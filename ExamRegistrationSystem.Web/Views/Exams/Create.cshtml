@model ExamViewModel

@{
    ViewData["Title"] = "Yeni İmtahan";
    var students = ViewBag.Students as List<StudentViewModel>;
    var courses = ViewBag.Courses as List<CourseViewModel>;
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Şagird</label>
        <select asp-for="StudentNumber" class="form-control" asp-items="@(new SelectList(students, "StudentNumber", "FirstName"))">
            <option value="">Şagird seçin</option>
        </select>
    </div>

    <div class="form-group">
        <label>Dərs</label>
        <select asp-for="CourseCode" class="form-control" asp-items="@(new SelectList(courses, "CourseCode", "CourseName"))">
            <option value="">Dərs seçin</option>
        </select>
    </div>

    <div class="form-group">
        <label>Tarix</label>
        <input asp-for="ExamDate" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label>Bal</label>
        <input asp-for="Score" class="form-control" type="number" />
    </div>

    <button type="submit" class="btn btn-success">Yadda saxla</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}